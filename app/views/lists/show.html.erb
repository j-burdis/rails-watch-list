<div class='banner'>
	<div id='emoji'>
	<%= "ðŸŽ¥" %>
	</div>
	<div>
		<%= link_to "My lists", lists_path %>
		<%= link_to "New list", new_list_path %>
	</div>
</div>

<div class="card-category">
	<%= @list.name %>
</div>

<div class='container'>
	<div class='movie-links'>
		<%= link_to "Back to lists", lists_path %>
		<%= link_to "Add a movie", new_list_bookmark_path(@list), class:'btn btn-success' %>
	</div>

	<div class='col-12'>
		<div class='movie-cards'>	
			<div class='card-movie'>
				<% @list.bookmarks.each do |bookmark| %>
					<%= image_tag "cinema-seats.jpg" %>
					<div class='movie-info'>
						<p><%= bookmark.movie.title %></p>
						<p><%= bookmark.movie.overview %></p>
					</div>
					<div class='movie-extras'>
						<p> "<%= bookmark.comment %>"</p>
						<p><%= link_to "Delete", bookmark_path(@list), class: 'btn btn-danger',
								data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></p>
					</div>
				<% end %>
			</div>
		</div>
	</div>
</div>
